<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloMauiApp.NavigationDetailPage"
             x:Name="detailPage"         
    Title="Detail Page">
    <VerticalStackLayout Spacing="15" Padding="20" VerticalOptions="Center">
        <Label x:Name="ReceivedDataLabel" Text="No data received." FontSize="Medium" HorizontalOptions="Center"/>
        <Entry x:Name="DataToReturnEntry" Placeholder="Enter data to return" />
        <Button Text="Go Back (PopAsync)" Clicked="GoBack_Clicked"/>
        <Button Text="Go Back and Send Data (via MessagingCenter)" Clicked="GoBackAndSendData_Clicked"/>
        <Button Text="Go to Home (Shell URI)" Clicked="GoToHomeShell_Clicked"/>
    </VerticalStackLayout>
</ContentPage>