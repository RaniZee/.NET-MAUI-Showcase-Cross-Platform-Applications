<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TaskTrackerMAUI.ViewModels"
             xmlns:models="clr-namespace:TaskTrackerMAUI.Models"
             x:Class="TaskTrackerMAUI.Views.SettingsPage"
             x:DataType="viewmodels:SettingsViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">

    <ScrollView Padding="15">
        <VerticalStackLayout Spacing="15">
            <Label Text="Тема оформления" FontSize="Medium" FontAttributes="Bold" FontFamily="Bahnschrift"/>

            <Picker Title="Выберите тему"
                    ItemsSource="{Binding ThemeOptions}"
                    SelectedItem="{Binding SelectedThemeOption, Mode=TwoWay}"
                    ItemDisplayBinding="{Binding .}" 
                    FontFamily="Bahnschrift"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>