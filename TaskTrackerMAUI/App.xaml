<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaskTrackerMAUI"
             xmlns:converters="clr-namespace:TaskTrackerMAUI.Converters"    
    x:Class="TaskTrackerMAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:IntToBoolConverterForVisibility x:Key="IntToBoolConverterForVisibility" />

        </ResourceDictionary>
    </Application.Resources>
</Application>